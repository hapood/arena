{
  "name": "arena",
  "version": "0.0.1-alpha",
  "description": "Dynamic state container for JavaScript apps",
  "scripts": {
    "prettier":
      "prettier --write \"**/*.js\" \"**/*.jsx\" \"**/*.tsx\" \"**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hapood/redux-arena.git"
  },
  "keywords": ["arena", "immutable", "observable", "react", "reactjs"],
  "author": "Hapood Wang",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hapood/arena/issues"
  },
  "homepage": "https://github.com/hapood/arena#readme",
  "peerDependencies": {
    "react": ">=16"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^22.0.0",
    "jest": "^22.0.4",
    "prettier": "^1.9.2",
    "ts-jest": "^22.0.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": ["**/__tests__/*.(ts|js)"],
    "moduleNameMapper": {
      "^src$": "<rootDir>/src/index.ts"
    }
  }
}
