{
  "name": "reuni",
  "version": "0.1.0-beta",
  "description": "Dynamic state container for JavaScript apps",
  "scripts": {
    "prettier":
      "prettier --write \"**/*.js\" \"**/*.jsx\" \"**/*.tsx\" \"**/*.ts\"",
    "build": "node scripts/build.js",
    "test": "yarn jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hapood/reuni.git"
  },
  "keywords": ["reuni", "immutable", "observable", "react", "reactjs"],
  "author": "Hapood Wang",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hapood/reuni/issues"
  },
  "homepage": "https://github.com/hapood/reuni#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^22.0.0",
    "jest": "^22.0.4",
    "prettier": "^1.9.2",
    "rollup": "^0.53.3",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "ts-jest": "^22.0.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": ["**/__tests__/*.test.(ts|js)"],
    "moduleNameMapper": {
      "^src$": "<rootDir>/src/index.ts"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/__tests__/**"
    ]
  }
}
